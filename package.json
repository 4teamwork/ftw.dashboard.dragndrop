{
  "name": "ftw.dashboard.dragndrop",
  "version": "1.0.0",
  "repository": "git@github.com:4teamwork/ftw.dashboard.dragndrop.git",
  "author": "4teamwork AG <info@4teamwork.ch>",
  "license": "GPL2",
  "scripts": {
    "build": "r.js -o build.js && r.js -o buildcss.js",
    "build-js": "r.js -o build.js",
    "build-css": "r.js -o buildcss.js",
    "watch": "chokidar \"./ftw/dashboard/dragndrop/browser/resources/(*.js|*.css)\" -i \"**/*-compiled.(js|css)\" -c \"if [[ '{path}' = *.js ]]; then r.js -o build.js; else r.js -o buildcss.js; fi;\""
  },
  "private": true,
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "requirejs": "^2.3.6",
    "text": "github:requirejs/text"
  }
}
